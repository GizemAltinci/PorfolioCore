@model PorfolioCore.Entities.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h2>Deneyim Güncelle Sayfası</h2>
<form method="post">
    <input type="hidden" asp-for="ExperienceId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid #000" />
    <br />
    <label>Alt Başlık</label>
    <input type="text" class="form-control" asp-for="SubTitle" style="border:1px solid #000" />
    <br />
    <label>Tarih</label>
    <input type="text" class="form-control" asp-for="ExperienceDate" style="border:1px solid #000" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid #000" />
    <button class="btn btn-success">Deneyimi Güncelle</button>
</form>