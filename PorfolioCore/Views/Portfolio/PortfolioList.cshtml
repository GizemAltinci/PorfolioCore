@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Portfolio Listesi</h2>

<table class="table table-bordered">
    <tr>
		<th>#</th>
		<th>Başlık</th>
		<th>Açıklama</th>
		<th>Kategori</th>
		<th>Sil</th>
		<th>Güncelle</th>
    </tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.PortfolioId</th>
			<th>@item.Title</th>
			<th>@item.Description</th>
			<th>@item.Category.CategoryName</th>
			<th><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></th>
			<th><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></th>
			
		</tr>
	}
</table>
<th><a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Portfolyo Ekle</a></th>

